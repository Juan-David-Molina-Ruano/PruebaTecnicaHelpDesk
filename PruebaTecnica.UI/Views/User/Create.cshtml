@model PruebaTecnica.BusinessEntities.User

@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card mt-5">
                <div class="card-body">
                    <h1 class="text-center">Create User</h1>
                    <hr />
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="form-group">
                            <label asp-for="UserName" class="control-label"></label>
                            <input asp-for="UserName" class="form-control" placeholder="Enter your username" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserPassword" class="control-label">Password</label>
                            <div class="input-group">
                                <div class="row">
                                    <div class="col-md-8">
                                        <input asp-for="UserPassword" type="password" class="form-control" placeholder="Enter your password" id="passwordInput" />
                                    </div>
                                    <div class="col-md-4">
                                        <div class="input-group-append">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value="" id="showPasswordToggle">
                                                <label class="form-check-label" for="showPasswordToggle">
                                                    Show
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <span asp-validation-for="UserPassword" class="text-danger"></span>
                        </div>
                        <div class="row" style="margin-top:10px;">
                            <div class="form-group col-md-6">
                                <input type="submit" value="Create" class="btn btn-primary btn-block" />
                                <span class="text-danger">@ViewBag.Error</span>
                            </div>
                            <div class="form-group col-md-6">
                                <a asp-action="Login" class="btn btn-secondary">Login</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const showPasswordToggle = document.getElementById('showPasswordToggle');
            const passwordInput = document.getElementById('passwordInput');

            showPasswordToggle.addEventListener('change', function () {
                if (this.checked) {
                    passwordInput.type = 'text';
                } else {
                    passwordInput.type = 'password';
                }
            });
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
