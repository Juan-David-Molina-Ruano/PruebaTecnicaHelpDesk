@model PruebaTecnica.BusinessEntities.Answer

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Answer</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AnswerText" class="control-label">Answer</label>
                <input asp-for="AnswerText" class="form-control" />
                <span asp-validation-for="AnswerText" class="text-danger"></span>
            </div>

            <!-- These fields are hidden to be populated in the controller -->
            <input asp-for="CreateDate" class="form-control" hidden />
            <input asp-for="UserId" class="form-control" hidden />
            <input asp-for="QuestionId" class="form-control" hidden />

            <div class="form-group" style="margin-top:20px;">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" asp-controller="Question" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
